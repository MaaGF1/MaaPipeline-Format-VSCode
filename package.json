{
    "name": "maapipeline-format",
    "displayName": "MAA Pipeline Formatter",
    "description": "Format MaaFramework Pipeline JSON files with intelligent structure-aware formatting",
    "version": "2.1.1",
    "publisher": "SwordofMorning",
    "author": {
        "name": "MaaGF1",
        "url": "https://github.com/MaaGF1"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/MaaGF1/MaaPipeline-Format-VSCode.git"
    },
    "bugs": {
        "url": "https://github.com/MaaGF1/MaaPipeline-Format-VSCode/issues"
    },
    "homepage": "https://github.com/MaaGF1/MaaPipeline-Format-VSCode#readme",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Formatters",
        "Other"
    ],
    "keywords": [
        "maa",
        "pipeline",
        "json",
        "formatter",
        "maaframework"
    ],
    "icon": "icon.png",
    "activationEvents": [
        "onLanguage:json",
        "onLanguage:jsonc"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "json",
                "aliases": ["JSON", "json"],
                "extensions": [".json"]
            }
        ],
        "commands": [
            {
                "command": "maapipeline-format.formatDocument",
                "title": "Format MAA Pipeline",
                "category": "MAA"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "maapipeline-format.formatDocument",
                    "when": "resourceExtname == .json",
                    "group": "1_modification@1"
                }
            ],
            "commandPalette": [
                {
                    "command": "maapipeline-format.formatDocument",
                    "when": "resourceExtname == .json"
                }
            ]
        },
        "keybindings": [
            {
                "command": "maapipeline-format.formatDocument",
                "key": "ctrl+shift+alt+f",
                "mac": "cmd+shift+alt+f",
                "when": "editorTextFocus && resourceExtname == .json"
            }
        ],
        "configuration": {
            "title": "MAA Pipeline Formatter",
            "properties": {
                "maapipeline-format.enableFormatOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable MAA Pipeline formatting on save"
                },
                "maapipeline-format.filePatterns": {
                    "type": "array",
                    "default": ["pipeline", "interface", "task"],
                    "description": "File name patterns that should be formatted with MAA Pipeline formatter"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/node": "^16.x",
        "@types/vscode": "^1.60.0",
        "typescript": "^4.4.4",
        "@types/mocha": "^9.1.0",
        "mocha": "^9.2.0"
    }
}